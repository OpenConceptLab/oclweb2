{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "settings": {
    "react": {
      "version": "16.4.2"
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "it": true,
    "alertify": true,
    "window": true,
    "document": true,
    "localStorage": true,
    "FormData": true,
    "FileReader": true,
    "Blob": true,
    "navigator": true,
    "Headers": true,
    "Request": true,
    "fetch": true
  },
  "plugins": ["mocha", "react", "prettier", "spellcheck"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/display-name": "off",
    "import/prefer-default-export": 0,
    "import/no-named-as-default": 0,
    "react/prefer-stateless-function": 0,
    "no-process-env": "error",
    "react/no-unescaped-entities": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/prop-types": 0,
    "no-underscore-dangle": 0,
        "spellcheck/spell-checker": [
      "error",
      {
        "comments": true,
        "strings": true,
        "identifiers": true,
        "templates": true,
        "lang": "en_US",
        "skipWords": [
          "paded",
          "csv",
          "uploader",
          "noreferrer",
          "noopener",
          "telecom",
          "mailto",
          "mouseover",
          "mouseout",
          "mouseup",
          "mousemove",
          "resize",
          "resized",
          "gif",
          "rtl",
          "blockquote",
          "dragger",
          "fontname",
          "webstore",
          "hotjar",
          "pageview",
          "ele",
          "termbrowser",
          "faq",
          "badged",
          "Fmd",
          "tslint",
          "haschild",
          "ico",
          "favicon",
          "resetted",
          "sys",
          "undef",
          "grey",
          "orgs",
          "valueset",
          "valuesets",
          "conceptmap",
          "conceptmaps",
          "namespace",
          "func",
          "repo",
          "autoexpand",
          "repo",
          "subheader",
          "snackbar",
          "oid",
          "ctx",
          "openconceptlab",
          "openmrs",
          "txt",
          "fontspec",
          "healthcare",
          "interoperability",
          "R’s",
          "jsonify",
          "curr",
          "comparator",
          "datatypes",
          "conceptclass",
          "fqdn",
          "smedium",
          "xxsmall",
          "xsmall",
          "vert",
          "fieldset",
          "captcha",
          "oidc",
          "versioned",
          "compositional",
          "autoid",
          "unretire",
          "unretired",
          "onok",
          "sortable",
          "sortables",
          "lhs",
          "rhs",
          "ocl",
          "hapi",
          "fhir",
          "getpagesoffset",
          "axios",
          "signup",
          "alertifyjs",
          "alertify",
          "mui",
          "tooltip",
          "pathname",
          "msg",
          "uri",
          "url",
          "urls",
          "href",
          "xhr",
          "kwargs",
          "svg",
          "str",
          "gfm",
          "datetime",
          "backtrace",
          "dropzone",
          "don’t",
          "doesnot",
          "droppable",
          "scrollable",
          "bgcolor",
          "nowrap",
          "num",
          "struct",
          "checkbox",
          "thead",
          "tbody",
          "tcell",
          "tspan",
          "dasharray",
          "pinnable",
          "selectable",
          "expandible",
          "searchable",
          "listbox",
          "atleast",
          "debounce",
          "lightgray",
          "darkgray",
          "calc",
          "bool",
          "rgb",
          "ident",
          "dom",
          "formatter",
          "renderer",
          "unselected",
          "onreadystatechange",
          "evenodd",
          "concepts’",
          "xxxx",
          "xxxxxxxx",
          "xxxxxxxxxxxx",
          "forground",
          "eng",
          "sourcetoconcepts",
          "sourcemappings",
          "upsert",
          "Unmount",
          "keydown",
          "rect",
          "Dropdown",
          "uncheck",
          "checksum",
          "checksums",
          "lang",
          "Espa",
          "unmark",
          "wildcard"
        ],
        "skipIfMatch": [
          "http://[^s]*",
          "^[-\\w]+\/[-\\w\\.]+$"
        ],
        "skipWordIfMatch": [
          ".*[\\d]+.*"
        ],
        "minLength": 3
      }
    ]
  }
}
